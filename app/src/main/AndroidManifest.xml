<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.zup.marvel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Marvel">
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Marvel.NoActionBar" />
        <activity
            android:name=".ui.splash.view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detalhe.DetalheActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.view.HomeActivity"
            android:exported="false" />
    </application>

</manifest>